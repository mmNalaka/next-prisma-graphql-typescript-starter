{
  "name": "next-prisma-graphql-typescript-starter",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/mmNalaka/next-prisma-graphql-typescript-starter.git",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --fix --ext .js,.ts,.tsx --ignore-path .gitignore .",
    "check-types": "tsc",
    "format": "npm run prettier -- --write",
    "db:migrate:save": "prisma migrate save --experimental",
    "db:migrate:up": "prisma migrate up --experimental",
    "db:studio": "npx prisma studio",
    "generate:prisma": "npx prisma generate",
    "generate:nexus": "ts-node --transpile-only src/graphql/schema.ts",
    "postinstall": "yarn generate:prisma && yarn generate:nexus"
  },
  "dependencies": {
    "@nexus/schema": "^0.19.2",
    "@prisma/client": "^2.12.1",
    "apollo-server-micro": "^2.19.0",
    "next": "^10.0.3",
    "next-auth": "^3.1.0",
    "nexus-plugin-prisma": "^0.25.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@prisma/cli": "^2.12.1",
    "@types/next-auth": "^3.1.18",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.15.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.4",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2"
  },
  "prisma": {
    "schema": "db/schema.prisma"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 yarn check-types && yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/*.+(js|ts|tsx)": [
      "yarn run lint"
    ],
    "src/*.+(js|json|ts|tsx)": [
      "yarn run format"
    ]
  }
}
